<UserOptions>
  <Server Hostname="localhost" Port="31415" />
  <!-- Test ip: 194.47.150.44 -->
  <Game Level="Havenborough Castle" Username="Player" />
  <Character Name="Dzala" Style="Green" />
  <Settings>
    <SSAO Enabled="true" />
    <ShadowMap Enabled="true" />
    <VSync Enabled="false" />
    <Fullscreen Enabled="false" />
    <Resolution Width="1280" Height="720" />
    <ShadowMapResolution Value="1024" />
    <FOV Value="60" />
    <MouseSensitivity Value="0.5" />
  </Settings>
  <Controls>
    <!--
		KEY : Key code
		Left shift: LShift
		Right shift: RShift
		Left Ctrl: LCtrl
		Right Ctrl: RCrtl
		-->
    <KeyMap Display="Back where?" Command="back" Key="Escape" />
    <KeyMap Display="Leave game" Command="leaveGame" Key="Escape" />
    <KeyMap Display="Movement forwards" Command="moveForward" Key="W" />
    <KeyMap Display="Movement backwards" Command="moveBackward" Key="S" />
    <KeyMap Display="Movement up" Command="moveUp" Key="Space" />
    <KeyMap Display="Movement down" Command="moveDown" Key="16" />
    <KeyMap Display="Strafe left" Command="moveLeft" Key="A" />
    <KeyMap Display="Strafe right" Command="moveRight" Key="D" />
    <KeyMap Display="Jump" Command="jump" Key="Space" />
    <KeyMap Display="Wave" Command="wave" Key="Q" />
    <KeyMap Display="Climb" Command="climbEdge" Key="E" />
    <KeyMap Display="Cast spell" Command="spellCast" Key="F" />
    <!--Debug related-->
    <KeyMap Display="Next deferred view" Command="changeViewN" Key="Z" />
    <KeyMap Display="Prev deferred view" Command="changeViewP" Key="X" />
    <KeyMap Display="Draw pivots" Command="drawPivots" Key="C" />
    <KeyMap Display="Turn on bounding vol" Command="switchBVDraw" Key="V" />
    <KeyMap Display="Main menu?" Command="goToMainMenu" Key="Return" />
    <KeyMap Display="Third person mode" Command="thirdPersonCamera" Key="O" />
    <KeyMap Display="Look back" Command="flipCamera" Key="P" />
    <KeyMap Display="Toggle debug info" Command="toggleDebugInfo" Key="114" />
    <KeyMap Display="Spline Record" Command="splineRecord" Key="R" />
    <KeyMap Display="Spline Remove" Command="splineRemove" Key="T" />
    <KeyMap Display="Spline Clear" Command="splineClear" Key="Y" />
    <KeyMap Display="Slow Mode" Command="slowMode" Key="48" />
    <KeyMap Display="Fast Mode" Command="fastMode" Key="49" />
    <!--Mouse input-->
    <MouseMap Display="MouseMoveHori" Command="mouseMoveHori" Position="mousePosHori" Movement="Horizontal" />
    <MouseMap Display="MouseMoveVert" Command="mouseMoveVert" Position="mousePosVert" Movement="Vertical" />
    <MouseButtonMap Display="Cast spell" Command="spellCast" Button="Left" />
    <MouseButtonMap Display="Climb" Command="climbEdge" Button="Right" />
  </Controls>
  <HUD>
    <!-- Positions in 1280x720 resolution. Will automatically adjust depending on resolution -->
    <Manabar x="0" y="-320" z="3" scale="0.75" />
    <Arrow x="0" y="300" z="150" scale="0.3" />
    <Countdown x="0" y="0" z="0" scale="2" />
    <Time x="420" y="250" z="0" scale="1" />
    <RacePos x="-450" y="320" z="1" scale="1" />
    <Checkpoints x="418" y="318" z="3" scale="1" />
  </HUD>
</UserOptions>