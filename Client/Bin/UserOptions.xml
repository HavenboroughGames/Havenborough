	<!-- Gamepad input

	This is a default mapping for an Xbox360 controller.
	_Axes_
	- 48: Left stick X
	- 49: Left stick Y
	- 50: Triggers, 0 - -1 for right trigger, 0 - 1 for left trigger.
		Note: Due to Windows wanting backward compatibility for older API:s,
		there is no reliable way to detect the triggers when pushed simultaneously.
	- 51: Right stick X
	- 52: Right stick Y
	- 57: D-Pad, but strangely numbered and not currently supported.
	
	_Buttons_
	- 1: A
	- 2: B
	- 3: X
	- 4: Y
	- 5: Left bumper
	- 6: Right bumper
	- 7: Back
	- 8: Start
	-->
	<GamepadAxisMap Display="Movement forwards" Command="moveForward" Usage="49" Direction="Neg" />
	<GamepadAxisMap Display="Movement backwards" Command="moveBackward" Usage="49" Direction="Pos" />
	<GamepadAxisMap Display="Strafe left" Command="moveLeft" Usage="48" Direction="Neg" />
	<GamepadAxisMap Display="Strafe right" Command="moveRight" Usage="48" Direction="Pos" />
	<GamepadAxisMap Display="Look left" Command="turnLeft" Usage="51" Direction="Neg" />
	<GamepadAxisMap Display="Look right" Command="turnRight" Usage="51" Direction="Pos" />
	<GamepadAxisMap Display="Look up" Command="turnUp" Usage="52" Direction="Neg" />
	<GamepadAxisMap Display="Look down" Command="turnDown" Usage="52" Direction="Pos" />
	<GamepadAxisMap Display="Cast spell" Command="spellCast" Usage="50" Direction="Neg" />
	<GamepadAxisMap Display="Climb" Command="climbEdge" Usage="50" Direction="Pos" />
	<GamepadButtonMap Display="Jump" Command="jump" Usage="1" />
	<GamepadButtonMap Display="Jump" Command="jump" Usage="6" />
	<GamepadButtonMap Display="Leave game" Command="leaveGame" Usage="7" />
	<GamepadButtonMap Display="Wave" Command="wave" Usage="4" />
